<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoListaHotel"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/hotel1"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/nombreListaHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel jaibana"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoListaHotel"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/precioListaHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120.000"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreListaHotel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/telefonoListaHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Telefono: "
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/precioListaHotel"
        app:layout_constraintTop_toBottomOf="@+id/nombreListaHotel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/numeroListaHotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3242310182"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/telefonoListaHotel"
        app:layout_constraintTop_toBottomOf="@+id/nombreListaHotel"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>